<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textStyles"
                android:text="Please input text to repeat:" />


            <EditText
                android:id="@+id/text_repeater__text"
                style="@style/editViewStyles"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="A word, sentence or pargraph"
                />

            <TextView
                style="@style/textStyles"
                android:text="How many times to repeat:" />

            <EditText
                android:id="@+id/text_repeater__how_many"
                style="@style/editViewStyles"
                android:hint="1 to 1000"
                android:ems="10"
                android:inputType="number" />

            <TextView
                style="@style/textStyles"
                android:text="Text separater: " />

            <EditText
                android:id="@+id/text_repeater__separator"
                style="@style/editViewStyles"
                android:hint="Any char such as comma, new line etc."
                android:ems="10"/>

            <Button
                android:id="@+id/btn_text_repeater__submit"
                style="@style/submitButtons"
                android:text="Generate Repeated Text" />

            <TextView
                android:id="@+id/utility_result"
                style="@style/textContentStyles"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>